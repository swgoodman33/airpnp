<div class="page-header">
  <h3>Listing #<%= @listing.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Price</dt>
      <dd><%= @listing.price %></dd>

      <dt>Description</dt>
      <dd><%= @listing.description %></dd>

      <dt>Address</dt>
      <dd><%= @listing.address %></dd>

      <dt>User</dt>
      <dd><%= @listing.user_id %></dd>

      <dt>Availability</dt>
      <dd><%= @listing.availability %></dd>

      <dt>Free wifi</dt>
      <dd><%= @listing.free_wifi %></dd>

      <dt>Heated floors</dt>
      <dd><%= @listing.heated_floors %></dd>

      <dt>Toiletries</dt>
      <dd><%= @listing.toiletries %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/listings" class="btn btn-primary">
        Back
      </a>
      <a href="/listings/<%= @listing.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_listing/<%= @listing.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
